<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_affiche"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.benji.myratp.activity_affiche">


    <TextView
        android:text="Destination:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtView12"
        android:textSize="25sp"
        android:layout_alignBaseline="@+id/txtDestination"
        android:layout_alignBottom="@+id/txtDestination"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="arret depart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDepart"
        android:textSize="25sp"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignLeft="@+id/txtDestination"
        android:layout_alignStart="@+id/txtDestination" />

    <TextView
        android:text="Prochain train :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginTop="26dp"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Depart:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:id="@+id/textView11"
        android:textSize="25sp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="arret destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDestination"
        android:textSize="25sp"
        android:layout_marginTop="57dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/txtDepart"
        android:layout_alignLeft="@+id/txtTime"
        android:layout_alignStart="@+id/txtTime" />

    <TextView
        android:text="time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:id="@+id/txtTime"
        android:textSize="50sp"
        android:layout_below="@+id/txtDestination"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
